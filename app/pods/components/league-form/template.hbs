<form class="league-form pure-form pure-form-stacked" {{action "save" on="submit"}}>
  {{input type="text" name="name" value=league.name}}

  {{#if league.isNew}}
    <!-- TODO: Use Select2 -->
    {{view "select" content=organizations
                    optionLabelPath="content.name"
                    optionValuePath="content.id"
                    prompt="Pick an organization:"
                    selection=league.organization}}
  {{else}}
    {{input type="text" name="organization" value=league.organization.name disabled="disabled"}}
  {{/if}}

  {{#if league.isNew}}
    <!-- TODO: Use Select2 -->
    {{view "select" content=activities
                    optionLabelPath="content.name"
                    optionValuePath="content.id"
                    prompt="Pick an activity:"
                    selection=league.activity}}
  {{else}}
    {{input type="text" name="activity" value=league.activity.name disabled="disabled"}}
  {{/if}}

  <!-- TODO: Date pickers for start and end -->
  {{input type="date" name="start" value=league.start}}
  {{input type="date" name="end" value=league.end}}

  {{input type="text" name="order" value=league.order}}

  <input type="submit" name="submit" value="Save">
</form>
